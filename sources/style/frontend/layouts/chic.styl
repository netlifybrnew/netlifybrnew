.chic
	background-color: #f5dcd5
	font-family: "Big Caslon", "Book Antiqua", "Palatino Linotype", Georgia, serif

	.description
		font-style: italic
		letter-spacing: .05em
		font-size: 16px

	.button
		border: 2px solid white
		border-radius: 2px
		margin-bottom: $s
		text-transform: uppercase
		font-size: 15px
		letter-spacing: .08em
		color: $dark
		-webkit-font-smoothing: antialiased

		&:hover
			background-color: white

